generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ... existing datasource ...

enum Role {
  USER
  ADMIN
  SUPPORT
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SubscriptionPlan {
  FREE
  PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

model User {
  id        String     @id // This will be the Clerk User ID
  email     String     @unique
  role      Role       @default(USER)
  status    UserStatus @default(PENDING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Subscription Fields
  subscriptionPlan    SubscriptionPlan   @default(FREE)
  subscriptionStatus  SubscriptionStatus @default(ACTIVE)
  subscriptionEndsAt  DateTime?
  isTrial             Boolean            @default(true)

  // Personal Info
  name                String?
  memberId            String?
  phoneNumber         String?
  
  // Financial Info
  salary              Float              @default(0)
  contributionRate    Float              @default(3)

  // Demographics for Benchmarking
  birthDate           DateTime?

  portfolio Portfolio?
  subscriptionRequests SubscriptionRequest[]
}

model Portfolio {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])
  
  totalBalance Float    @default(0)
  holdings     Json     @default("[]") // Storing as JSON for easy migration
  history      Json     @default("[]") // Storing chart history as JSON
  
  lastUpdated  DateTime @default(now())
}

model SystemConfig {
  key         String   @id
  value       String
  description String?
  updatedAt   DateTime @updatedAt
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PlanType {
  MONTHLY
  QUARTERLY
  YEARLY
}

model SubscriptionRequest {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  
  plan      PlanType
  price     Float
  slipImage String        // Base64 string for MVP
  status    RequestStatus @default(PENDING)
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}
